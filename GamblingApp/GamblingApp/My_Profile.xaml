<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GamblingApp.My_Profile">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Info"
                  BackgroundColor="#282828">
        <StackLayout>
            <Label 
                Text="Info"/>
        </StackLayout>
    </ContentPage>

    
    

    <ContentPage Title="Statistics"
                  BackgroundColor="#282828">
        <StackLayout>
            <Label 
                Text="Stats"/>
        </StackLayout>
    </ContentPage>

    
    

    <ContentPage Title="UserInfo"
                  BackgroundColor="#282828">
        <StackLayout>
            <Label 
                Text="UserInfo"/>
        </StackLayout>
    </ContentPage>
    
    
</TabbedPage>